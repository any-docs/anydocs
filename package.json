{
  "name": "core",
  "dependencies": {
    "oxc-minify": "^0.104.0"
  },
  "devDependencies": {
    "turbo": "^2.7.1",
    "vite-plugin-static-copy": "^3.1.4",
    "vitepress": "^2.0.0-alpha.15"
  },
  "scripts": {
    "docs:dev": "bun run sync:env && turbo run docs:dev",
    "docs:build": "NODE_OPTIONS='--max-old-space-size=8192' turbo run docs:build",
    "docs:preview": "vitepress preview",
    "sync:env": "find docs -maxdepth 2 -name \"package.json\" -exec sh -c 'cp .env $(dirname {})/.env' \\;"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@latest"
    }
  },
  "overrides": {
    "vite": "npm:rolldown-vite@latest"
  },
  "packageManager": "bun@1.2.0",
  "workspaces": [
    "docs/*"
  ]
}